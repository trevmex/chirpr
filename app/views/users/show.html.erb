<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Description:</b>
  <%= @user.description %>
</p>

<% @user.statuses.each do |status| %>
  <p>Status: <%= status.description %></p>
<% end %>

<%= form_for([@user, @user.statuses.build]) do |f| %>
  <div class="field">
    <%= f.label :description, "Status" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
